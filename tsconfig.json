{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    // "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": [
    "api/**/*.ts",
    "config/**/*.ts",
    "controllers/**/*.ts",
    "helpers/**/*.ts",
    "middleware/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ]
}
