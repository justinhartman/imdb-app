    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "Binger Watch Free Movies & TV Series",
            "url": "<%= canonical %>",
            "image": "<%= `${APP_URL}/images/binger.uk-hero.jpg` -%>",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "<%= canonical %>/search?q={search_term_string}&type={movie_or_series}",
                "query-input": [
                    {
                        "@type": "PropertyValueSpecification",
                        "valueRequired": true,
                        "valueName": "search_term_string"
                    },
                    {
                        "@type": "PropertyValueSpecification",
                        "valueRequired": false,
                        "valueName": "movie_or_series"
                    }
                ]
            }
        }
    </script>
