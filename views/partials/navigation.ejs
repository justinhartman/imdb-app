<body class="bg-dark bg-gradient">
    <header class="pt-3 p-md-3 bg-dark text-white sticky-top shadow">
        <div class="container">
            <!-- Header Search -->
            <div class="row">
                <form action="<%= APP_URL %>/search" class="d-flex justify-content-center" method="get" name="search">
                    <div class="col-sm-12 col-md-3">
                        <a href="<%= APP_URL %>/" class="display-5 text-info text-decoration-none me-2 me-md-0 ms-0 ms-md-2" for="q">
                            <img src="<%= APP_URL %>/images/favicons/apple-touch-icon.png" style="width:64px" class="d-none d-md-inline" alt="Binger.uk Free Movies and TV Series">
                            <img src="<%= APP_URL %>/images/favicons/apple-touch-icon.png" style="width:80px" class="d-inline d-md-none" alt="Binger.uk Free Movies and TV Series">
                            <div class="d-none d-md-none d-lg-inline-flex mt-1">Binger</div>
                        </a>
                    </div>
                    <div class="col-sm-12 col-md-9 mt-md-3">
                        <div class="row my-2 my-md-0">
                            <div class="col-sm-12 col-md-7 pe-md-0">
                                <input type="text" class="form-control" name="q" id="q"
                                       aria-label="Search for your next binge..."
                                       placeholder="Search for your next binge..."
                                       value="<%= query _%>" required>
                            </div>
                            <div class="col-sm-12 col-md-5 my-md-0 my-2 d-flex">
                                <div class="form-check form-check-inline pt-1 pt-md-2">
                                    <input class="form-check-input" type="radio" name="type" id="movie" value="movie" <%= type === 'movie' ? 'checked' : '' %>>
                                    <label class="form-check-label text-info" for="movie">Movie</label>
                                </div>
                                <div class="form-check form-check-inline pt-1 pt-md-2">
                                    <input class="form-check-input" type="radio" name="type" id="series" value="series" <%= type === 'series' ? 'checked' : '' %>>
                                    <label class="form-check-label text-info" for="series">TV <div class="d-none d-md-inline">Show</div></label>
                                </div>
                                <button type="submit" class="d-none d-md-inline btn btn-info"><i class="bi-search-heart-fill"></i> Search</button>
                                <button type="submit" class="d-md-none btn btn-sm btn-info">Search</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </header>

    <div class="b-divider"></div>
