<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Binger Watch Free Movies & TV Series</title>
    <meta name="description" content="Free app for searching, browsing and watching movies and TV shows.">
    <link rel="canonical" href="<%= APP_URL %>"/>
    <link rel="apple-touch-icon" sizes="180x180" href="<%= APP_URL %>/images/favicons/apple-touch-icon.png"/>
    <link rel="icon" type="image/png" sizes="32x32" href="<%= APP_URL %>/images/favicons/favicon-32x32.png"/>
    <link rel="icon" type="image/png" sizes="16x16" href="<%= APP_URL %>/images/favicons/favicon-16x16.png"/>
    <link rel="manifest" href="<%= APP_URL %>/images/favicons/site.webmanifest"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="<%= APP_URL %>/css/style.css"/>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": "Binger Watch Free Movies & TV Series",
            "url": "<%= APP_URL %>/",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "<%= APP_URL %>/search?q={search_term_string}&type={movie_or_series}",
                "query-input": [
                    {
                        "@type": "PropertyValueSpecification",
                        "valueRequired": true,
                        "valueName": "search_term_string"
                    },
                    {
                        "@type": "PropertyValueSpecification",
                        "valueRequired": false,
                        "valueName": "movie_or_series"
                    }
                ]
            }
        }
    </script>
</head>
<body class="bg-dark bg-gradient">
    <header class="pt-3 p-md-3 bg-dark text-white sticky-top shadow">
        <div class="container">
            <!-- Header Search -->
            <div class="row">
                <form action="<%= APP_URL %>/search" method="get" name="search">
                    <div class="input-group text-center">
                            <a href="<%= APP_URL %>/" class="display-5 text-info text-decoration-none col-sm-12 col-md-3" for="q">
                                <i class="bi-collection-play-fill px-1"></i> Binger
                            </a>
                            <div class="col-sm-12 col-md-9 my-md-2">
                                <div class="row my-2 my-md-0">
                                    <div class="col-sm-12 col-md-7 pe-md-0">
                                        <input type="text" class="form-control" name="q" id="q"
                                               aria-label="Search for your next binge..."
                                               placeholder="Search for your next binge..."
                                               value="<%= query %>" required>
                                    </div>
                                    <div class="col-sm-12 col-md-5 my-md-0 my-2">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="type" id="movie" value="movie" <%= type === 'movie' ? 'checked' : '' %>>
                                            <label class="form-check-label text-info" for="movie">Movie</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="type" id="series" value="series" <%= type === 'series' ? 'checked' : '' %>>
                                            <label class="form-check-label text-info" for="series">TV Show</label>
                                        </div>
                                        <button type="submit" class="btn btn-info"><i class="bi-search-heart-fill"></i> Search</button>
                                    </div>
                                </div>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </header>

    <div class="b-divider"></div>

    <!-- New Movies -->
    <div class="container">
        <div class="row">
            <h1 class="display-4 my-4 text-warning">New Movies</h1>
            <% newMovies.forEach(movie => { %>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card text-bg-dark mb-3">
                    <a href="<%= APP_URL %>/view/<%= movie.imdb_id %>/movie">
                        <img src="<%= movie.poster %>" alt="<%= movie.title %>" class="card-img-top">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-nowrap overflow-hidden text-warning"><%= movie.title %></h5>
                        <a href="<%= APP_URL %>/view/<%= movie.imdb_id %>/movie" class="btn btn-primary w-100">
                            <i class="bi-play-btn-fill px-1"></i> Watch Now
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <hr class="border border-secondary border-2 opacity-50">

    <!-- New TV Shows -->
    <div class="container">
        <div class="row">
            <h1 class="display-4 my-4 text-warning">New TV Shows</h1>
            <% newSeries.forEach(show => { %>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card text-bg-dark mb-3">
                    <a href="<%= APP_URL %>/view/<%= show.imdb_id %>/series">
                        <img class="card-img-top" src="<%= show.poster %>" alt="<%= show.title %>">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-nowrap overflow-hidden text-warning"><%= show.title %></h5>
                        <a class="btn btn-primary w-100" href="<%= APP_URL %>/view/<%= show.imdb_id %>/series">
                            <i class="bi-collection-play-fill px-1"></i> Watch Now
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
