<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HartTV Movies & TV Search Engine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-dark">
    <div class="container">
        <h1 class="text-center my-4">HartTV Movies & TV Search Engine</h1>
        <form class="d-flex justify-content-center mb-4" action="/search" method="get" name="search">
            <input type="text" class="form-control me-2 w-75" name="q" placeholder="Search for your next binge..." required>
            <select class="form-control me-2 w-25" name="type">
                <option value="movie" <%= type === 'movie' ? 'selected' : '' %>>Movie</option>
                <option value="series" <%= type === 'series' ? 'selected' : '' %>>TV Show</option>
            </select>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>

        <% if (results && results.length > 0) { %>
            <h2 class="my-4">Search Results</h2>
            <div class="row">
                <% results.forEach(result => { %>
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card">
                            <a href="/view/<%= result.imdbID %>?type=<%= type === 'movie' ? 'movie' : 'series' %>">
                                <img class="card-img-top" src="<%= result.Poster !== 'N/A' ? result.Poster : '/images/no_image_available.png' %>" alt="<%= result.Title %>">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%= result.Title %> (<%= result.Year %>)</h5>
                                <a class="btn btn-primary w-100" href="/view/<%= result.imdbID %>?type=<%= type === 'movie' ? 'movie' : 'series' %>">Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
                <div class="text-center m-4">
                    <a href="/" class="btn btn-warning">Back to Home</a>
                </div>
            </div>
        <% } %>

        <% if (results.length === 0) { %>
            <h2 class="my-4">New Movies</h2>
            <div class="row">
                <% newMovies.forEach(movie => { %>
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card">
                            <a href="/view/<%= movie.imdb_id %>?type=movie">
                                <img class="card-img-top" src="<%= movie.poster !== undefined ? movie.poster : '/images/no_image_available.png' %>" alt="<%= movie.title %>">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%= movie.title %></h5>
                                <a class="btn btn-primary w-100" href="/view/<%= movie.imdb_id %>?type=movie">Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <h2 class="my-4">New TV Shows</h2>
            <div class="row">
                <% newTVShows.forEach(show => { %>
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card">
                            <a href="/view/<%= show.imdb_id %>?type=series">
                                <img class="card-img-top" src="<%= show.poster !== undefined ? show.poster : '/images/no_image_available.png' %>" alt="<%= show.title %>">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title"><%= show.title %></h5>
                                <a class="btn btn-primary w-100" href="/view/<%= show.imdb_id %>?type=series">Watch Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>
